<div class= "row mt-5">
  <div class="col-10 offset-1 mb-2">
    <p class="font-weight-bold col-md-8"><%= @contact.created_at.strftime('%Y/%m/%d') %></p>
  </div>
</div>

<div class= "row">
  <div class="col-10 offset-1 mb-2">
    <h1 class="h2 font-weight-bold col-md-8"><%= @contact.subject %></h1>
  </div>
</div>
<ul class="row list-unstyled">
    <div class="border-bottom border-2 col-10 offset-1">
      <div class="d-flex">
        <li class="nav-item col-md-9 mr-auto">
          <div class="h font-weight-bold">メールアドレス:<%= @contact.email %>　名前:<%= @contact.name %></div>
        </li>
        <li class="nav-item col-md-1">
          <%= link_to "削除", admin_contact_path(@contact), method: :delete %>
        </li>
        <li class="nav-item col-md-1">
          <%= link_to "戻る", admin_contacts_path %>
        </li>
      </div>
    </div>
  </ul>
  
  <div class="row my-5">
    <div class="col-10 offset-1">
      <%= @contact.message %>
    </div>
  </div>