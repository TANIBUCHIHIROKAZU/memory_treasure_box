<% memory.comments.each do |comment| %>
  <div class="col-8 offset-2 bg-primary text-white my-5 p-4">
    <div class="row" style="display:flex;justify-content:space-between;">
      <div class="ml-3">
        <%= link_to memory_index_admin_customer_path(comment.customer) do %>
          <%= attachment_image_tag comment.customer.icon, :icon, :fill, 60, 60, fallback: "no_image.jpg" %> 
            <span class="text-white font-weight-bold my-auto">　<%= comment.customer.name %></span>
            <span class="text-white font-weight-bold"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to "削除", admin_memory_comment_path(comment.memory_id, comment),method: :delete, remote: true,class: "text-danger btn btn-light badge-pill px-4" %>
      </div>
    </div>
    <p class="my-3">
      <%= comment.comment %>
    </p>
  </div>
<% end %>

