<div>名前 <%= @customer.name %></div>
<div>プラン <%= @customer.plan %></div>
<div>公開中</div>
<% @memory_public.each do |memory| %>
  <ul>
    <li>
      <%= link_to memory_path(memory) do %>
        <%= memory.memory_title %>
        <% memory.memory_tags.each do |tag| %>
          <%= tag.tag_name %>
        <% end %>
        <%= truncate(memory.memory_detail,length: 20) %>
        ♡<%= memory.favorites.count %>
        コメント(<%= memory.comments.count %>)
      <% end %>
    </li>
  </ul>
<% end %>
<%= paginate @memory_public %>


<div>限定公開一覧</div>
<% if current_customer.mutual_follow?(@customer) || @customer == current_customer %>
  <% @memory_follower_only.each do |memory| %>
    <ul>
      <li>
        <%= link_to memory_path(memory) do %>
          <%= memory.memory_title %>
          <% memory.memory_tags.each do |tag| %>
            <%= tag.tag_name %>
          <% end %>
          <%= truncate(memory.memory_detail, length: 10) %>
          ♡<%= memory.favorites.count %>
          コメント(<%= memory.comments.count %>)
        <% end %>
      </li>
    </ul>
  <% end %>
<% end %>
<%= paginate @memory_follower_only %>