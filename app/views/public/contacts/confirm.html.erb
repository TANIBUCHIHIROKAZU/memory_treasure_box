  <h3>確認画面</h3>
  <dl>
    <dt>名前</dt>
    <dd><%= @contact.name %></dd>
    <dt>メールアドレス</dt>
    <dd><%= @contact.email %></dd>
    <dt>件名</dt>
    <dd><%= @contact.subject %></dd>
    <dt>本文</dt>
    <dd><%= @contact.message %></dd>
    
    <%= form_with model: @contact, url: contacts_path,local:true do |f| %>
    <%= f.hidden_field :name, value: @contact.name  %>
    <%= f.hidden_field :email, value: @contact.email  %>
    <%= f.hidden_field :subject, value: @contact.subject  %>
    <%= f.hidden_field :message, value: @contact.message  %>
    <div>
      <%= f.submit '確認画面へ' %>
    </div>
  </dl>
<% end %>