<% memory.comments.each do |comment| %>
 <%= comment.comment %>
 <% if comment.customer.id == current_customer.id %>
  <%= link_to "削除", memory_comment_path(comment.memory_id, comment),method: :delete, remote: true %>
 <% end %>
 <br>
  <%= link_to memory_index_customer_path(comment.customer) do %>
    <%= attachment_image_tag comment.customer.icon, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
    <%= comment.customer.name  %>
  <% end %>
 <% end %>
<%= form_with model: [memory, comment], url: memory_comments_path(@memory), method: :post, remote: true do |f| %>
 <%= f.text_area :comment, placeholder: "コメントはこちらから入力"  %>
 <%= f.submit "送信する" %>
<% end %>