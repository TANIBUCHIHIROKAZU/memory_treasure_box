  <% if flash[:danger] %>
    <p><%= render 'layouts/flash_messages' %></p>
  <% end %>
<h1><%= @memory.memory_title %></h1>
<div>
    <div>名前 <%= @memory.customer.name %></div>
    <div id="favorite_<%= @memory.id %>">
      <%= render "public/favorites/favorite", memory: @memory %>
    </div>
  <% @memory_tags.each do |tag| %>
    <div><%= tag.tag_name %></div>
  <% end %>
    <div><%= @memory.created_at.strftime('%Y/%m/%d') %></div>
   <% if @memory.customer.id == current_customer.id %>
     <div><%= link_to "編集", edit_memory_path(@memory) %></div>
     <div><%= link_to "削除", memory_path(@memory), method: :delete %></div>
   <% end %>
     <div><%= link_to "戻る", memory_index_customer_path(@memory.customer_id) %></div>
</div>
<div><%= @memory.memory_detail %></div>
<% if @memory.memory_images.present? %>
  <% @memory.memory_images.each do |image| %>
    <%= attachment_image_tag image, :image, :fill, 60, 60 %>
  <% end %>
<% end %>
<div id="comment">
 <%= render "public/comments/comment", memory: @memory,comment: @comment %>
</div>