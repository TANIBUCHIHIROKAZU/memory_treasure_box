</div>
<% if flash[:danger] %>
  <p><%= render 'layouts/flash_messages' %></p>
<% end %>
<article class= "container">
    <div class="col-10 offset-1 border-bottom border-2">
      <div class= "row mt-5 mb-3 justify-content-lg-between">
        <h1 class="h2 font-weight-bold col-md-4">ニュース</h1>
        <%= link_to "ニュース一覧", informations_path,class: "text-dark col-2 font-weight-bold my-auto btn btn-outline-primary mr-3" %>
      </div>
    </div>
  <table class="table col-10 offset-1 my-auto py-5">
    <tbody>
      <% @information.each do |information| %>
            <tr class="col-10 offset-1 border-bottom border-2 py-5">
              <td>
                <%= link_to information_path(information),class: "row text-decoration-none" do %>
                  <div class="col-4 text-body"><%= information.created_at.strftime('%Y/%m/%d') %></div>
                  <div class="col-4 text-body"><%= information.admin_genre&.name %></div>
                  <div class="col-3 text-body"><%= information.information_title %></div>
                  <div class="col-1"><img src="<%= asset_path("asset1.png") %>" alt="" class="asset1"></div>
                <% end %>
              </td>
            </tr>
      <% end %>
    </tbody>
  </table>
</article>

