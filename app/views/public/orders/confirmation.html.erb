<h3>最終確認</h3>
ユーザー名:<%= @customer.name %>
メールアドレス:<%= @customer.email %>
<h3>支払い方法</h3>
Payment method:　<%= Order.payment_methods.invert[@order_params["payment_method"].to_i] %>
Plan:　<%= Order.plans.invert[@order_params["plan"].to_i] %>
Price:　<%= Order.prices[@order_params["price"]] %>
<%= form_with model: Order.new, url: orders_path, method: :post, local: true do |f|%>
  <%= f.hidden_field :payment_method, value: @order_params["payment_method"].to_i %>
  <%= f.hidden_field :plan, value: @order_params["plan"].to_i %>
  <%= f.hidden_field :price, value: @order_params["price"] %>
  <%= f.submit 'Decide' %>
<% end %>