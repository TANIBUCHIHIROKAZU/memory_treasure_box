
  <table class="table col-10 offset-1 my-auto py-5">
    <tbody>
      <% information.each do |information| %>
            <tr class="col-10 offset-1 border-bottom border-2 py-5">
              <td>
              <%= link_to information_path(information),class: "row" do %>
                <div class="col-4"><%= information.created_at.strftime('%Y/%m/%d') %></div>
                <div class="col-4"><%= information.admin_genre&.name %></div>
                <div class="col-4"><%= information.information_title %></div>
              <% end %>
              </td>
            </tr>
      <% end %>
    </tbody>
  </table>
